<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/appbar_padding_top">

        <TableRow>

            <TextView
                android:text="载体信息"
                android:textColor="@color/colorRecordText3"
                android:textSize="@dimen/password_text_size" />

            <TextView
                android:id="@+id/text_object"
                android:paddingLeft="@dimen/appbar_padding_top"
                android:textColor="@color/colorRecordText1"
                android:textSize="@dimen/password_text_size" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="商品类型"
                android:textColor="@color/colorRecordText3"
                android:textSize="@dimen/password_text_size" />

            <TextView
                android:id="@+id/text_goodstype"
                android:paddingLeft="@dimen/appbar_padding_top"
                android:textColor="@color/colorRecordText1"
                android:textSize="@dimen/password_text_size" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="操作人员"
                android:textColor="@color/colorRecordText3"
                android:textSize="@dimen/password_text_size" />

            <TextView
                android:id="@+id/text_acter"
                android:paddingLeft="@dimen/appbar_padding_top"
                android:textColor="@color/colorRecordText1"
                android:textSize="@dimen/password_text_size" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="起始时间"
                android:textColor="@color/colorRecordText3"
                android:textSize="@dimen/password_text_size" />

            <TextView
                android:id="@+id/text_starttime"
                android:paddingLeft="@dimen/appbar_padding_top"
                android:textColor="@color/colorRecordText1"
                android:textSize="@dimen/password_text_size" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="起始地址"
                android:textColor="@color/colorRecordText3"
                android:textSize="@dimen/password_text_size" />

            <TextView
                android:id="@+id/text_start_address"
                android:paddingLeft="@dimen/appbar_padding_top"
                android:textColor="@color/colorRecordText1"
                android:textSize="@dimen/password_text_size" />
        </TableRow>

        <TableRow android:id="@+id/row_end_time">

            <TextView
                android:text="结束时间"
                android:textColor="@color/colorRecordText3"
                android:textSize="@dimen/password_text_size" />

            <TextView
                android:id="@+id/text_end_time"
                android:paddingLeft="@dimen/appbar_padding_top"
                android:textColor="@color/colorRecordText1"
                android:textSize="@dimen/password_text_size" />
        </TableRow>

        <TableRow android:id="@+id/row_end_address">

            <TextView
                android:text="结束地址"
                android:textColor="@color/colorRecordText3"
                android:textSize="@dimen/password_text_size" />

            <TextView
                android:id="@+id/text_end_address"
                android:paddingLeft="@dimen/appbar_padding_top"
                android:textColor="@color/colorRecordText1"
                android:textSize="@dimen/password_text_size" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="采集次数"
                android:textColor="@color/colorRecordText3"
                android:textSize="@dimen/password_text_size" />

            <LinearLayout
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_times"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="2"
                    android:gravity="top"
                    android:paddingLeft="@dimen/appbar_padding_top"
                    android:textColor="@color/colorRecordText1"
                    android:textSize="@dimen/password_text_size" />

                <Button
                    android:id="@+id/btn_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/shape_gather_data"
                    android:text="采集记录"
                    android:textColor="#EAB42E"
                    android:textSize="@dimen/password_text_size" />

                <Button
                    android:id="@+id/btn_all"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="@dimen/appbar_padding_top"
                    android:background="@drawable/shape_all_data"
                    android:text="全部记录"
                    android:textColor="#2EC4EA"
                    android:textSize="@dimen/password_text_size" />
            </LinearLayout>


        </TableRow>

    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/appbar_padding_top"
        android:background="#C1C1C1"></View>

</LinearLayout>