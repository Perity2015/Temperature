<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.huiwu.temperaturecontrol.fragment.ChooseObjectFragment">

    <EditText
        android:id="@+id/text_object"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入查询或添加"
        android:singleLine="true"
        android:textColor="@color/colorRecordText1"
        android:textColorHint="@color/colorRecordText3"
        android:textSize="@dimen/password_text_size" />

    <ListView
        android:id="@+id/listView_objects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
