<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="custom_dialog_style" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="dialog_button_style" parent="android:Widget.Material.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_btn</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4fc0e8</item>
    </style>
</resources>